<div class="container">

  <div class="row">

    <div class="col-sm-offset-3 col-sm-6">

      <div class="form-title">
        <h1>Expose your art</h1>
      </div>

      <%= simple_form_for(@artwork) do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control' %>
       </div>

       <div class=“form-group”>
       <% @categories = ['painting', 'sculpture', 'drawing', 'photo'] %>
        <%= f.input :category, collection: @categories %>
      </div>

        <div class="form-group">
         <%= f.input :photo %>
         <%= f.input :photo_cache, as: :hidden %>
       </div>

        <div class="form-group calendar" style="width: 400px; margin: 0 auto;">
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        </div>

       <%= f.submit class: 'btn btn-primary' %>
      <% end %>

    </div>

  </div>

</div>
