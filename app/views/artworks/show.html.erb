<div class="wrapper">
<center>
  <h1> <%= @artwork.name %> </h1>
  <%= cl_image_tag @artwork.photo, height: 500, width: 600, crop: :fill %>
</center>
<center>
  <%= @artwork.category %>
  <br />
  <%= @artwork.availability %>
  <p>Available from :<%= @artwork.start_date %></p>
  <p>to : <%= @artwork.end_date %></p>
  <% if policy(@artwork).edit? %>
    <%= link_to  edit_artwork_path(@artwork) do %>
    <i class="fas fa-edit"></i>
  <% end %>
  </center>
  <% end %>
</div>



<h3>Made by:</h3>
<p><%= @artwork.user.name %></p>
<%if @artwork.user.artist %>
  <p>Artist (<%= @artwork.user.category %>)</p>
<%else %>
  <p>Host (<p><%= @artwork.user.category %></p>)</p>
<%end %>

